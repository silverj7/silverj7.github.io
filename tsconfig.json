{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@public/*": ["public/*"],
      "@src/*": ["src/*"],
      "@styles/*": ["styles/*"],
      "@components/*": ["src/components/*"],
      "@types": ["src/types"],
      "@pages/*": ["src/pages/*"],
      "@config/*": ["src/config"],
      "@stores/*": ["src/stores/*"],
      "@service/*": ["src/service/*"],
      "@constants/*": ["src/constants"]
    },
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true /* Enable all strict type-checking options. */,
    "allowJs": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  },
  "include": [
    "./src/**/*",
    "gatsby-node.js",
    "./gatsby-config.ts",
    "**/*.ts",
    "**/*.tsx",
    "./plugins/**/*"
  ],
  "exclude": ["node_modules"]
}
